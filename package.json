{
  "name": "infinit",
  "version": "1.0.14",
  "description": "A cross-platform application for Salesforce developers, analysts, and release managers operate and collaborate on their next feature, project, or release, all that from within a single platform.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps",
    "build": "electron-builder --mac --win",
    "win": "electron-builder --win",
    "mac": "electron-builder --mac",
    "release": "electron-builder --mac --win --publish always",
    "debug": "node --nolazy --inspect-brk=5858 main.js"
  },
  "keywords": [
    "Force.com",
    "Deployment",
    "Comparison",
    "Retrieval"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/godarapradeep/infinit.git"
  },
  "author": "Pradeep Godara",
  "license": "CC-BY-4.0",
  "devDependencies": {
    "electron": "^20.1.4",
    "electron-builder": "^23.3.3",
    "electron-notarize": "^1.2.1"
  },
  "build": {
    "appId": "com.daas.infinit",
    "productName": "infinit",
    "copyright": "Copyright Â© year infinit",
    "mac": {
      "category": "public.app-category.developer-tools",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "electronLanguages": [
        "en"
      ],
      "target": [
        "default"
      ]
    },
    "publish": [
      "github"
    ],
    "dmg": {
      "icon": false,
      "sign": false
    },
    "win": {
      "target": "NSIS"
    },
    "extraFiles": [
      "library/infinit-electron_lib",
      "library/infinit-electron-obs.jar",
      "library/infinit.db",
      {
        "from": "library/jre_${os}",
        "to": "library/jre"
      }
    ],
    "afterSign": "scripts/notarize.js"
  },
  "dependencies": {
    "clean": "^4.0.2",
    "copy-dir": "^1.3.0",
    "deep-equal": "^2.0.5",
    "diff": "^5.1.0",
    "electron-store": "^8.1.0",
    "electron-updater": "5.2.1",
    "fast-xml-parser": "^4.0.10",
    "jsforce": "^1.11.0",
    "object-hash": "^3.0.0",
    "parse-diff": "^0.9.0",
    "shelljs": "^0.8.5"
  },
  "bugs": {
    "url": "https://github.com/godarapradeep/infinit/issues"
  },
  "homepage": "https://github.com/godarapradeep/infinit#readme"
}
